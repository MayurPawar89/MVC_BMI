@model MVC_BMEApplication.Models.Aircraft
@{
    ViewBag.Title = "Aircraft Detail Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ViewAircraft", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.AircraftTypeID)
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.AircraftType, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.AircraftType, new { @class = "form-control", @placeholder = "Aircraft Type" })
                @Html.ValidationMessageFor(model => model.AircraftType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.AircraftCode, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.AircraftCode, new { @class = "form-control", @placeholder = "Aircraft Code" })
                @Html.ValidationMessageFor(model => model.AircraftCode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" value="Save" class="btn btn-default" />
            <a href="@Url.Action("ManageAircraft", "Home")" class="btn btn-default">Cancel</a>
        </div>
    </div>
    <div class="h5 mb-3 font-weight-normal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
}

@if (ViewBag.Message != null)
{
    <script>
    window.onload = function () {
        alert('@ViewBag.Message');
            window.location.href = "@Url.Action("ManageAircraft", "Home")";
        }
    </script>
}


