@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="myModal" class="modal fade in" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a class="btn btn-default" data-dismiss="modal"><span class="fa fa-trash-o"></span></a>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <p>@ViewBag.Message</p>
            </div>
            <div class="modal-footer">
                <div class="btn-group">
                    <button class="btn btn-danger" data-dismiss="modal" onclick="Redirect();"><span><i class="fa fa-check"></i></span> OK</button>
                </div>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dalog -->
</div><!-- /.modal -->
<script>
    function Redirect() {
        window.location.href = "@Url.Action(ViewBag.Action, ViewBag.ControllerName)";
    }
    window.onload = function () {
        $('#myModal').modal('show');
    }
</script>
